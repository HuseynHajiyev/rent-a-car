<div data-controller="cars-list">
  <div class="container">
    <div class="option-list">
      <br>
      <h4>What are you looking for?</h4>
      <p class="btn option-button" data-cars-list-target="map-button" data-action="click->cars-list#displayMap">Find cars near me</p>
      <p class="btn option-button" data-cars-list-target="grid-button" data-action="click->cars-list#displayGrid">See all cars</p>
    </div>
  </div>
<div class="container  d-none" data-cars-list-target="grid"">
  <div class="cards">
    <% @cars.each do |car| %>
      <% @belongs_to_user = car.user == current_user %>
      <div class="card-product <%= "border-green" if @belongs_to_user  %>">
        <% if car.photo.attached?%>
          <%= cl_image_tag car.photo.key %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/wvala/image/upload/v1653656942/cld-sample.jpg" %>
        <% end %>
        <div class="card-product-infos">
          <h2><%= @belongs_to_user ? "My " : "" %>Car: <%= car.car_model %></h2>
          <p>Color: <%= car.color %></p>
          <p>Price: â‚¬<%= car.price %></p>
          <p><%= link_to "Details", car_path(car)%></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="container">
    <div class="map-border " data-cars-list-target="mapmap">
      <div style="width: 100%; height: 600px;" class="map"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
